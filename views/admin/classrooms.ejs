<%- include('../_partial/_header.ejs') %>
<%- include('../_partial/_navbar_admin.ejs') %>
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h2">Salas de Aula</h1>
            <div class="btn-toolbar mb-2 mb-md-0">
                <div class="btn-group me-2">
                    <form action="/admin/classrooms/create">
                        <button type="submit" class="btn btn-outline-secondary">Inserir Sala de Aula</button>
                    </form>
                    <form class=" ml-5 d-flex search_tool">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-success " type="submit">Procurar</button>
                    </form>
                </div>
            </div>
        </div> 
        <div class="table-responsive">
            <table class="table table-striped table-sm">
            <thead>
                <tr>
                <th scope="col">#</th>
                <th scope="col">Número da Sala</th>
                <th scope="col">Número do Prédio</th>
                <th scope="col">QR Code</th>
                <th scope="col">Editar</th>
                </tr>
            </thead>
            <tbody>
                <% classrooms.forEach((classroom)=> { %>
                <tr>
                <td><%= classroom.id %></td>
                <td><%= classroom.number %></td>
                <td><%= classroom.building %></td>
                <td><%= classroom.qrcode %></td>
                <td><a href="/admin/classrooms/edit/<%= classroom.id %>">Editar</a></td>          
                </tr>
                <% }) %>              
            </tbody>
            </table>
        </div>
        </main>
    </div>
    </div>


<%- include('../_partial/_footer_admin.ejs') %>