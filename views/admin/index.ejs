<%- include('../_partial/_header.ejs') %>
<%- include('../_partial/_navbar_admin.ejs') %>
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h2">Dashboard</h1>
            <div class="btn-toolbar mb-2 mb-md-0">
            <div class="btn-group me-2">
                <button type="button" class="btn btn-outline-secondary">Salvar Relatório</button>
                <button type="button" class="btn btn-outline-secondary">Exportar Relatório</button>
            </div>
            <!-- <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle">
                <span data-feather="calendar"></span>
                This week
            </button> -->
            </div>
        </div> 
        <h1>PRESENÇA DOS PROFESSORES</h1>
        <div class="table-responsive">
            <table class="table table-striped table-sm">
            <thead>
                <tr>
                <th scope="col">#</th>
                <th scope="col">Data</th>
                <th scope="col">Professor</th>
                <th scope="col">Disciplina</th>
                <th scope="col">Presença</th>
                </tr>
            </thead>
            <tbody>
                <% attendances.forEach((attendance, index)=> { %>
                <tr>
                <td><%= attendance.id %></td>
                <td><%= attendance.date %></td>
                <td><%= attendance.drt_professor %></td>
                <td><%= attendance.id_subject %></td>
                <td><%= attendance.present %></td>
                </tr>
                <% }) %>
            </tbody>
            </table>
        </div>
        <h1>PROFESSORES CADASTRADOS</h1>
        <div class="table-responsive">
            <table class="table table-striped table-sm">
            <thead>
                <tr>
                <th scope="col">DRT</th>
                <th scope="col">Nome</th>
                <th scope="col">e-mail</th>
                <th scope="col">senha</th>
                </tr>
            </thead>
            <tbody>
                <% professors.forEach((professor, index)=> { %>
                    <tr>
                    <td><%= professor.drt %></td>
                    <td><%= professor.name %></td>
                    <td><%= professor.login %></td>
                    <td><%= professor.password %></td>
                    </tr>
                <% }) %>
            </tbody>
            </table>
        </div>
        <h1>DISCIPLINAS CADASTRADAS</h1>
        <div class="table-responsive">
            <table class="table table-striped table-sm">
            <thead>
                <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">Dia da semana</th>
                <th scope="col">Hora</th>
                </tr>
            </thead>
            <tbody>
                <% subjects.forEach((subject, index)=> { %>
                    <tr>
                    <td><%= subject.id %></td>
                    <td><%= subject.name %></td>
                    <td><%= subject.dayOfWeek %></td>
                    <td><%= subject.time %></td>
                    </tr>
                <% }) %>
            </tbody>
            </table>
        </div>
        <h1>SALAS DE AULA CADASTRADAS</h1>
        <div class="table-responsive">
            <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Número da Sala</th>
                    <th scope="col">Número do Prédio</th>
                    <th scope="col">QR Code</th>
                </tr>
            </thead>
            <tbody>
                <% classrooms.forEach((classroom, index)=> { %>
                    <tr>
                    <td><%= classroom.id %></td>
                    <td><%= classroom.number %></td>
                    <td><%= classroom.building %></td>
                    <td><%= classroom.qrcode %></td>
                    </tr>
                <% }) %>
            </tbody>
            </table>
        </div>
        </main>
    </div>
    </div>


