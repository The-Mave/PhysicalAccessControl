<%- include('../_partial/_header.ejs') %>
<%- include('../_partial/_navbar_admin.ejs') %>
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h2">Disciplinas</h1>
            <div class="btn-toolbar mb-2 mb-md-0">
            <div class="btn-group me-2">
                <form action="/admin/subjects/create">
                    <button type="submit" class="btn btn-outline-secondary">Inserir Disciplina</button>
                </form>
                <form class=" ml-5 d-flex search_tool">
                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success " type="submit">Procurar</button>
                </form>
            </div>
            
            </div>
        </div> 
        <div class="table-responsive">
            <table class="table table-striped table-sm">
            <thead>
                <tr>
                <th scope="col">#</th>
                <th scope="col">Nome da disciplina</th>
                <th scope="col">Dia da Semana</th>
                <th scope="col">Hora</th>
                <th scope="col">Professor</th>
                <th scope="col">Sala de Aula</th>
                <th scope="col">Editar</th>
                </tr>
            </thead>
            <tbody>
                <% subjects.forEach((subject)=> { %>
                <tr>
                <td><%= subject.id %></td>
                <td><%= subject.name %></td>

                <td><%= (() => {
                    switch (subject.dayOfWeek) {
                      case 1: return 'Domingo';
                      case 2: return 'Segunda-feira';
                      case 3: return 'Terça-feira';
                      case 4: return 'Quarta-feira';
                      case 5: return 'Quinta-feira';
                      case 6: return 'Sexta-feira';
                      case 7: return 'Sábado';
                      default: return 'Número inválido';
                    }
                  })() %></td>

                <td><%= subject.time %></td>
                <td><%= subject.drt_professor %></td>
                <td><%= subject.id_classroom %></td>
                <td><a href="/admin/subjects/edit/<%= subject.id %>">Editar</a></td>
                </tr>
                <% }) %>
            </tbody>
            </table>
        </div>
        </main>
    </div>
    </div>


<%- include('../_partial/_footer_admin.ejs') %>
